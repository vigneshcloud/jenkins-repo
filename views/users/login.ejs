<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-auto">
    <div class="row">
        <div class="col-md-6 offset-md-3  offset-xl-4">
            <div class="card shadow">
                <img src="https://source.unsplash.com/collection/225/" alt="" class="card-img-top"/>
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" class="validated-form" method="POST" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="description">username</label>
                            <input  autofocus class="form-control" type="text" id="username" name="username" required>
                            <div class="valid-feedback">Looks Good </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input  class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">Looks Good </div>
                        </div>
                        <button class="btn btn-success btn-block">Login</button>
                    </form>
                </div>
                
            </div>
        </div>
    </div>

</div>
